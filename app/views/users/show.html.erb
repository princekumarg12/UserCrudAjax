<p class="text-success"><%= notice %></p>
<div class="container mt-4">
  <%= render @user, class: "card mt-3" %>

  <div class="mt-3">
    <%= link_to "Edit this user", edit_user_path(@user), class: "btn btn-primary me-2" %>
    <%= link_to "Back to users", users_path, class: "btn btn-secondary me-2" %>

    <div class="mb-2"></div> <!-- Added space here -->

    <%= button_to "Destroy this user", @user, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
  </div>
</div>